<MainScreen>

    GridLayout:
        orientation: "vertical"
        rows: 6
        cols: 1
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: 13,13,13,.1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "horizontal"
            Label:
                id: song
                text: "Title of the song"


        BoxLayout:
            orientation: "horizontal"
            center_x: self.parent.center_x
            center_y: self.parent.center_y

            ImageButton:
                on_release: root.previous_song()
                source: 'icon/back.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50, 50
                size_hint: None, None
                allow_stretch: True

            ImageButton:
                id: play
                on_press: root.on_play()
                source: 'icon/play.png'
                started: 0
                # started is a value to know if the song is already started to
                # unpause it or play it from the beginning
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50,50
                size_hint: None, None
                allow_stretch: True

            ImageButton:
                on_press: root.next_song()
                source: 'icon/next.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50, 50
                size_hint: None, None
                allow_stretch: True
