<MainScreen>
    BoxLayout:
        orientation: "vertical"
        spacing: 4
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: .12,.12,.12,1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 15

            Label:
                id: song
                text: "Title of the song"

        BoxLayout:
            orientation: "horizontal"
            padding: 80, 0, 0, 0
            size_hint: None, None
            height: 15
            width: root.width

            AnchorLayout:
                ProgressBar:
                    anchor_x: 'right'
                    id: progress
                    max: 100
                    value: 0
                    cursor_size: 0, 0
                    size_hint_x: None
                    pos_hint_x: None
                    width: .75*root.width

            AnchorLayout:
                anchor_x: 'right'
                Label:
                    id: duration
                    text: ""
                    size_hint_x: None
                    width: .25*root.width

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 32
            spacing: 30
            padding: self.parent.width/2 - (3*self.height + 60)/2, 0, 0, 0


            ImageButton:
                on_release: root.previous_song()
                source: 'icon/back.png'
                size: self.parent.height, self.parent.height
                size_hint: None, None
                allow_stretch: True

            ImageButton:
                id: play
                on_press: root.on_play()
                source: 'icon/play.png'
                started: 0
                # started is a value to know if the song is already started to
                # unpause it or play it from the beginning
                size: self.parent.height, self.parent.height
                size_hint: None, None
                allow_stretch: True

            ImageButton:
                on_press: root.next_song()
                source: 'icon/next.png'
                size: self.parent.height, self.parent.height
                size_hint: None, None
                allow_stretch: True

        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            height: 24
            width: root.width
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0,0,1,1
                Rectangle:
                    pos: self.pos
                    size: self.size

            ImageButton:
                id: shuffle
                on_release: root.on_shuffle()
                source: 'icon/shuffle.png'
                size: self.parent.height, self.parent.height
                size_hint: None, None
                allow_stretch: True

            Image:
                id: volumeImage
                source: 'icon/volume.png'
                size: self.parent.height, self.parent.height
                size_hint: None, None
                allow_stretch: True

            Slider:
                id: volume
                orientation: 'horizontal'
                size_hint_x: None
                width: .5*root.width
                min: 0
                max: 100
                step: .05
                value: 50
                value_track: True
                value_track_color: .2, .6, 1, 1
                cursor_size: 0,0
                canvas.before:
                    Color:
                        rgba: 0,1,0,.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
